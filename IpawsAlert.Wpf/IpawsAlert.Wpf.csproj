<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <UseWPF>true</UseWPF>
    <AssemblyName>IpawsAlert</AssemblyName>
    <RootNamespace>IpawsAlert.Wpf</RootNamespace>
    <StartupObject>IpawsAlert.Wpf.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\IpawsAlert.Core\IpawsAlert.Core.csproj" />
  </ItemGroup>

  <!-- No external packages required; System.Text.Json is built into .NET 10 -->

</Project>