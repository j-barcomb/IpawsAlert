<UserControl x:Class="IpawsAlert.Wpf.Views.ComposeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:IpawsAlert.Wpf.Converters"
             Background="{StaticResource Brush.Bg.Shell}">

    <UserControl.Resources>
        <conv:BoolToVisConverter          x:Key="BoolToVis"/>
        <conv:InverseBoolToVisConverter   x:Key="InvBoolToVis"/>
        <conv:SeverityToBrushConverter    x:Key="SevBrush"/>
        <conv:CapStatusToBrushConverter   x:Key="CapStatusBrush"/>
        <conv:OverLimitToBrushConverter   x:Key="OverLimitBrush"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="480"/>
            <ColumnDefinition Width="380" MinWidth="280"/>
        </Grid.ColumnDefinitions>

        <!-- FORM (left) -->
        <DockPanel Grid.Column="0">

            <!-- Toolbar -->
            <Border DockPanel.Dock="Top"
                    Background="{StaticResource Brush.Bg.Panel}"
                    BorderBrush="{StaticResource Brush.Border.Default}"
                    BorderThickness="0,0,0,1" Padding="20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Compose Alert"
                                   FontSize="{StaticResource Font.Size.Xl}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Brush.Text.Primary}"/>
                        <Border Margin="14,0,0,0" Padding="10,3" CornerRadius="10" VerticalAlignment="Center">
                            <Border.Background>
                                <Binding Path="SelectedStatus" Converter="{StaticResource CapStatusBrush}"/>
                            </Border.Background>
                            <TextBlock Text="{Binding SelectedStatus}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Validate"
                                Command="{Binding ValidateCommand}"
                                Style="{StaticResource Style.Button.Secondary}"
                                Margin="0,0,8,0"/>
                        <Button Content="Clear"
                                Command="{Binding ClearFormCommand}"
                                Style="{StaticResource Style.Button.Secondary}"
                                Margin="0,0,8,0"/>
                        <!-- Normal send button (Test/Exercise) -->
                        <Button Content="Send Alert"
                                Command="{Binding SendCommand}"
                                IsEnabled="{Binding CanSend}"
                                Style="{StaticResource Style.Button.Primary}"
                                Visibility="{Binding IsActualMode, Converter={StaticResource InvBoolToVis}}"/>
                        <!-- Live send button (Actual — shown in red) -->
                        <Button Content="⚠ Send LIVE Alert"
                                Command="{Binding SendCommand}"
                                IsEnabled="{Binding CanSend}"
                                Style="{StaticResource Style.Button.Danger}"
                                Visibility="{Binding IsActualMode, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Validation banner (only visible after Validate is clicked) -->
            <Border DockPanel.Dock="Top" Padding="20,10"
                    Visibility="{Binding HasValidationResult, Converter={StaticResource BoolToVis}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background"      Value="#1A2A1A"/>
                        <Setter Property="BorderBrush"     Value="{StaticResource Brush.Status.Success}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                                <Setter Property="Background"  Value="#2A1A1A"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Brush.Status.Error}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding HasValidationWarnings}" Value="True">
                                <Setter Property="Background"  Value="#2A1E0A"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Brush.Status.Test}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding ValidationSummary}"
                           FontFamily="{StaticResource Font.Mono}"
                           FontSize="{StaticResource Font.Size.Sm}"
                           Foreground="{StaticResource Brush.Text.Primary}"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Scrollable form -->
            <ScrollViewer DockPanel.Dock="Bottom"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="20,16,14,20">
                <StackPanel>

                    <!-- Alert Classification -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="ALERT CLASSIFICATION" Style="{StaticResource Style.SectionHeading}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Status" Style="{StaticResource Style.FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding SelectedStatus}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="4,0">
                                    <TextBlock Text="Message Type" Style="{StaticResource Style.FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding MsgTypeOptions}" SelectedItem="{Binding SelectedMsgType}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                    <TextBlock Text="Scope" Style="{StaticResource Style.FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding ScopeOptions}" SelectedItem="{Binding SelectedScope}"/>
                                </StackPanel>
                            </Grid>
                            <!-- Reference ID: only for Update / Cancel -->
                            <StackPanel Margin="0,10,0,0"
                                        Visibility="{Binding IsUpdateOrCancel, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Reference Alert ID (required for Update / Cancel)"
                                           Style="{StaticResource Style.FieldLabel}"/>
                                <TextBox Text="{Binding ReferenceAlertId, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource Style.TextBox.Mono}" Height="28"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Event Information -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="EVENT INFORMATION" Style="{StaticResource Style.SectionHeading}"/>
                            <TextBlock Text="Event Type" Style="{StaticResource Style.FieldLabel}"/>
                            <ComboBox ItemsSource="{Binding CommonEventTypes}"
                                      SelectedItem="{Binding SelectedEventType}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding CustomEventType, UpdateSourceTrigger=PropertyChanged}"
                                     Height="28" Margin="0,0,0,10"
                                     Visibility="{Binding IsCustomEvent, Converter={StaticResource BoolToVis}}"/>
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Urgency" Style="{StaticResource Style.FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding UrgencyOptions}" SelectedItem="{Binding Urgency}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="4,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="Severity" Style="{StaticResource Style.FieldLabel}" Margin="0"/>
                                        <Ellipse Width="8" Height="8" Margin="6,0,0,0" VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <Binding Path="Severity" Converter="{StaticResource SevBrush}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </StackPanel>
                                    <ComboBox ItemsSource="{Binding SeverityOptions}" SelectedItem="{Binding Severity}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                    <TextBlock Text="Certainty" Style="{StaticResource Style.FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding CertaintyOptions}" SelectedItem="{Binding Certainty}"/>
                                </StackPanel>
                            </Grid>
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="EAS SAME Event Code (3-char, optional)" Style="{StaticResource Style.FieldLabel}"/>
                                <TextBox Text="{Binding EasEventCode, UpdateSourceTrigger=PropertyChanged}"
                                         Height="28" MaxLength="3" FontFamily="{StaticResource Font.Mono}"
                                         Width="80" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Message Content -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="MESSAGE CONTENT" Style="{StaticResource Style.SectionHeading}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Headline" Style="{StaticResource Style.FieldLabel}" Margin="0"/>
                                <TextBlock Margin="8,0,0,0" FontSize="{StaticResource Font.Size.Xs}" VerticalAlignment="Center">
                                    <TextBlock.Foreground>
                                        <Binding Path="HeadlineCharCount" Converter="{StaticResource OverLimitBrush}"/>
                                    </TextBlock.Foreground>
                                    <TextBlock.Text>
                                        <Binding Path="HeadlineCharCount" StringFormat="{}{0} chars"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                            <TextBox Text="{Binding Headline, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30" Margin="0,0,0,8"/>
                            <TextBlock Text="Description" Style="{StaticResource Style.FieldLabel}"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80" AcceptsReturn="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto" Margin="0,0,0,8"/>
                            <TextBlock Text="Instruction" Style="{StaticResource Style.FieldLabel}"/>
                            <TextBox Text="{Binding Instruction, UpdateSourceTrigger=PropertyChanged}"
                                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- Timing -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="TIMING" Style="{StaticResource Style.SectionHeading}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Effective" Style="{StaticResource Style.FieldLabel}"/>
                                    <DatePicker SelectedDate="{Binding EffectiveDate}" Height="30"
                                                Background="{StaticResource Brush.Bg.Input}"
                                                Foreground="{StaticResource Brush.Text.Primary}"
                                                BorderBrush="{StaticResource Brush.Border.Default}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Expires" Style="{StaticResource Style.FieldLabel}"/>
                                    <DatePicker SelectedDate="{Binding ExpiryDate}" Height="30"
                                                Background="{StaticResource Brush.Bg.Input}"
                                                Foreground="{StaticResource Brush.Text.Primary}"
                                                BorderBrush="{StaticResource Brush.Border.Default}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Geographic Area -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="GEOGRAPHIC AREA" Style="{StaticResource Style.SectionHeading}"/>
                            <TextBlock Text="Area Description" Style="{StaticResource Style.FieldLabel}"/>
                            <TextBox Text="{Binding AreaDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Height="28" Margin="0,0,0,10"/>
                            <TextBlock Text="SAME Location Codes (6-digit FIPS)" Style="{StaticResource Style.FieldLabel}"/>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Text="{Binding SameCodeInput, UpdateSourceTrigger=PropertyChanged}"
                                         Height="28" MaxLength="6" FontFamily="{StaticResource Font.Mono}"
                                         Margin="0,0,6,0">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Return" Command="{Binding AddSameCodeCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="1" Content="Add"
                                        Command="{Binding AddSameCodeCommand}"
                                        Style="{StaticResource Style.Button.Secondary}"
                                        Height="28" Padding="12,0"/>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding SameCodes}" Margin="0,4,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate><WrapPanel Orientation="Horizontal"/></ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource Brush.Bg.Panel}"
                                                BorderBrush="{StaticResource Brush.Border.Default}"
                                                BorderThickness="1" CornerRadius="3"
                                                Padding="8,3" Margin="0,3,4,3">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding}"
                                                           FontFamily="{StaticResource Font.Mono}"
                                                           FontSize="{StaticResource Font.Size.Sm}"
                                                           Foreground="{StaticResource Brush.Text.Primary}"/>
                                                <Button Content="×" CommandParameter="{Binding}"
                                                        Command="{Binding DataContext.RemoveSameCodeCommand,
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Background="Transparent" BorderThickness="0"
                                                        Foreground="{StaticResource Brush.Text.Muted}"
                                                        FontSize="11" Padding="4,0,0,0" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="Polygon Coordinates (lat,lon pairs — space-separated)"
                                       Style="{StaticResource Style.FieldLabel}" Margin="0,10,0,4"/>
                            <TextBox Text="{Binding PolygonText, UpdateSourceTrigger=PropertyChanged}"
                                     Height="50" AcceptsReturn="True" TextWrapping="Wrap"
                                     FontFamily="{StaticResource Font.Mono}"
                                     FontSize="{StaticResource Font.Size.Sm}"/>
                        </StackPanel>
                    </Border>

                    <!-- Channels -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="DISSEMINATION CHANNELS" Style="{StaticResource Style.SectionHeading}"/>

                            <!-- WEA -->
                            <Border Background="{StaticResource Brush.Bg.Panel}"
                                    BorderBrush="{StaticResource Brush.Border.Default}"
                                    BorderThickness="1" CornerRadius="4" Padding="14,12" Margin="0,0,0,8">
                                <StackPanel>
                                    <CheckBox Content="WEA — Wireless Emergency Alerts"
                                              IsChecked="{Binding WeaEnabled}" FontWeight="SemiBold"/>
                                    <StackPanel Margin="0,10,0,0"
                                                Visibility="{Binding WeaEnabled, Converter={StaticResource BoolToVis}}">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="Short Text (WEA 2.0, ≤90 chars)"
                                                       Style="{StaticResource Style.FieldLabel}" Margin="0"/>
                                            <TextBlock Margin="8,0,0,0" FontSize="{StaticResource Font.Size.Xs}" VerticalAlignment="Center">
                                                <TextBlock.Foreground>
                                                    <Binding Path="WeaShortOverLimit" Converter="{StaticResource OverLimitBrush}"/>
                                                </TextBlock.Foreground>
                                                <TextBlock.Text>
                                                    <Binding Path="WeaShortCharCount" StringFormat="{}{0} / 90"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBox Text="{Binding WeaShortText, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="50" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="Long Text (WEA 3.0, ≤360 chars)"
                                                       Style="{StaticResource Style.FieldLabel}" Margin="0"/>
                                            <TextBlock Margin="8,0,0,0" FontSize="{StaticResource Font.Size.Xs}" VerticalAlignment="Center">
                                                <TextBlock.Foreground>
                                                    <Binding Path="WeaLongOverLimit" Converter="{StaticResource OverLimitBrush}"/>
                                                </TextBlock.Foreground>
                                                <TextBlock.Text>
                                                    <Binding Path="WeaLongCharCount" StringFormat="{}{0} / 360"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBox Text="{Binding WeaLongText, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="70" AcceptsReturn="True" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- EAS -->
                            <Border Background="{StaticResource Brush.Bg.Panel}"
                                    BorderBrush="{StaticResource Brush.Border.Default}"
                                    BorderThickness="1" CornerRadius="4" Padding="14,12" Margin="0,0,0,8">
                                <StackPanel>
                                    <CheckBox Content="EAS — Emergency Alert System"
                                              IsChecked="{Binding EasEnabled}" FontWeight="SemiBold"/>
                                    <StackPanel Margin="0,10,0,0"
                                                Visibility="{Binding EasEnabled, Converter={StaticResource BoolToVis}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                                <TextBlock Text="Org Code" Style="{StaticResource Style.FieldLabel}"/>
                                                <TextBox Text="{Binding EasOrgCode, UpdateSourceTrigger=PropertyChanged}"
                                                         Height="28" MaxLength="8" FontFamily="{StaticResource Font.Mono}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                                <TextBlock Text="Originator Callsign" Style="{StaticResource Style.FieldLabel}"/>
                                                <TextBox Text="{Binding EasCallsign, UpdateSourceTrigger=PropertyChanged}"
                                                         Height="28" MaxLength="8" FontFamily="{StaticResource Font.Mono}"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- NWEM -->
                            <Border Background="{StaticResource Brush.Bg.Panel}"
                                    BorderBrush="{StaticResource Brush.Border.Default}"
                                    BorderThickness="1" CornerRadius="4" Padding="14,12">
                                <StackPanel>
                                    <CheckBox Content="NWEM — National Weather Emergency Messages"
                                              IsChecked="{Binding NwemEnabled}" FontWeight="SemiBold"/>
                                    <StackPanel Margin="0,10,0,0"
                                                Visibility="{Binding NwemEnabled, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="VTEC String" Style="{StaticResource Style.FieldLabel}"/>
                                        <TextBox Text="{Binding VtecString, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="28" FontFamily="{StaticResource Font.Mono}" Margin="0,0,0,8"/>
                                        <TextBlock Text="UGC Codes (comma-separated, e.g. OHZ001,OHC002)"
                                                   Style="{StaticResource Style.FieldLabel}"/>
                                        <TextBox Text="{Binding UgcCodes, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="28" FontFamily="{StaticResource Font.Mono}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Rectangle Height="20"/>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- XML PREVIEW (right) -->
        <Grid Grid.Column="1" Background="{StaticResource Brush.Bg.Panel}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Padding="16,12"
                    BorderBrush="{StaticResource Brush.Border.Default}"
                    BorderThickness="1,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CAP XML PREVIEW"
                               FontSize="{StaticResource Font.Size.Sm}" FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.Text.Secondary}" VerticalAlignment="Center"/>
                    <Button Content="Copy" Margin="12,0,0,0" Padding="8,3"
                            Style="{StaticResource Style.Button.Secondary}"
                            FontSize="{StaticResource Font.Size.Xs}"
                            Click="CopyXmlButton_Click"/>
                </StackPanel>
            </Border>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Text="{Binding XmlPreview, Mode=OneWay}"
                         Style="{StaticResource Style.TextBox.Mono}"
                         FontSize="10" IsReadOnly="True" TextWrapping="NoWrap"
                         BorderThickness="0" Background="Transparent" Padding="16,12"
                         VerticalAlignment="Top"/>
            </ScrollViewer>
        </Grid>

        <GridSplitter Grid.Column="0" Width="4" HorizontalAlignment="Right"
                      Background="{StaticResource Brush.Border.Default}" Cursor="SizeWE"/>
    </Grid>
</UserControl>
